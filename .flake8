[flake8]
# see https://black.readthedocs.io/en/stable/guides/using_black_with_other_tools.html#flake8
max-line-length = 80
extend-select = B950
extend-ignore = E203,E501,E701
per-file-ignores =
    src/roboarena/server/level_generation/tileset.py:W291
exclude =
    .git,
    pycache,
    old,
    build,
    dist,
    .venv
